<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My App</title>
</head>
<style>
    #menu{
        width: 100%;
        height: 50px;
        background: #353535;
        text-align: center;
    }
    .actionLink{
        color: #ffffff;
        font-size: 25px;
    }
    .content{
        margin-bottom: 20px;
    }
    .footer {
        text-align: center;
        background: #353535;
        width: 100%;
        height: 50px;
    }
    p {
        color: #ffffff;
        font-size: 15px;
    }
</style>
<body>
    <div class="header">
        <div id="menu">
            @Html.ActionLink("My app", "Index", "Home", new { area = "" }, new { @class = "actionLink" })
        </div>
    </div>
    <div class="content">
        @RenderBody()
    </div>
    <div class="footer">
        <p>Copyright Azat</p>
    </div>

</body>
</html>